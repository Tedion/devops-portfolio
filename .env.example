# Server
PORT=5000

# CORS: in production, set to your site origin (e.g. https://your-domain.com)
# Leave empty in development to allow all origins
# CORS_ORIGIN=http://localhost:5173

# SMTP (optional). If unset, messages are stored under server/_inbox/
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=your-email@example.com
# TO_EMAIL=your-email@example.com

# Frontend flags (Vite)
# Enable lightweight analytics collection (sends to /api/events)
VITE_ENABLE_ANALYTICS=false

# Show analytics dashboard component in UI
VITE_SHOW_ANALYTICS_DASHBOARD=false

# Backend SMTP (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=
TO_EMAIL=

# Frontend analytics flags (optional)
VITE_ENABLE_ANALYTICS=false
VITE_SHOW_ANALYTICS_DASHBOARD=false